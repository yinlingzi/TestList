<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"

    >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:id="@+id/r1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="task1today"
                android:textSize="18dp"
                android:textColor="#000000"
                android:paddingLeft="6dp"
                android:id="@+id/sub_text_id"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23:12:11"
                    android:id="@+id/sub_text_time"
                    android:textColor="#000000"
                    android:paddingLeft="6dp"
                    android:textSize="12dp"
                    android:layout_below="@id/sub_text_id"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_below="@id/sub_text_id"
                    android:textColor="#000000"
                    android:paddingLeft="2dp"
                    android:textSize="12dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人事物"
                    android:layout_below="@id/sub_text_id"
                    android:textColor="#000000"
                    android:paddingLeft="2dp"
                    android:textSize="12dp"
                    android:id="@+id/sub_text_attr"
                    />
            </LinearLayout>

        </LinearLayout>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub_button_clock_id"
            android:src="@drawable/quick_edit_icon_reminder"
            android:layout_weight="1"
            android:background="#ffffff"
            />



</LinearLayout>